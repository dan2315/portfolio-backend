version: "3.9"

services:
  rabbitmq:
    image: rabbitmq:3.13-management
    container_name: portfolio_rabbitmq
    restart: unless-stopped
    environment:
      RABBITMQ_DEFAULT_USER: guest
      RABBITMQ_DEFAULT_PASS: guest
    ports:
      - "5672:5672"
      - "15672:15672"
    volumes:
      - rabbitmq_data:/var/lib/rabbitmq

  redis:
    image: redis:7
    container_name: portfolio_redis
    restart: unless-stopped
    ports:
      - "6379:6379"
    command: redis-server --appendonly yes
    volumes:
      - redis_data:/data

  postgres:
    image: postgres:16
    container_name: portfolio_postgres
    restart: unless-stopped
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
      POSTGRES_DB: portfolio
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data

  api:
    build:
      context: .
      dockerfile: ./cv-backend/src/Portfolio.Api/Dockerfile
    container_name: portfolio_api
    ports:
      - "8080:8080"
    depends_on:
      - postgres
      - redis
      - rabbitmq
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      GitHub__Token: ${GitHub__Token}
      ConnectionStrings__Postgres: "Host=postgres;Port=5432;Database=portfolio;Username=postgres;Password=postgres"
      ConnectionStrings__Redis: "redis:6379"
      SMTP__User: ${SMTP__User}
      SendGrid__ApiKey: ${SendGrid__ApiKey}
      RabbitMq__Uri: "amqp://guest:guest@rabbitmq:5672"

  worker:
    build:
      context: .
      dockerfile: ./cv-backend/src/Workers.Analytics/Dockerfile
    container_name: worker_analytics
    depends_on:
      - postgres
      - redis
      - rabbitmq
    environment:
      ConnectionStrings__Postgres: "Host=postgres;Port=5432;Database=portfolio;Username=postgres;Password=postgres"
      RabbitMq__Uri: "amqp://guest:guest@rabbitmq:5672"

  migrator:
    build:
      context: .
      dockerfile: ./cv-backend/src/Portfolio.Migrator/Dockerfile
    depends_on:
      - postgres
    environment:
      ConnectionStrings__Postgres: "Host=postgres;Port=5432;Database=portfolio;Username=postgres;Password=postgres"

volumes:
  postgres_data:
  redis_data:
  rabbitmq_data:
